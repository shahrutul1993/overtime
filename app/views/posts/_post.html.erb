
<tr>
	<td>
		<%= post.id %>
	</td>
	<td>
		<%= post.date %>
	</td>
	<td>
		<%= post.overtime_request%>
	</td>
	<td>
		<%= post.user.try(:full_name) %>
	</td>
	<td>
		<%= link_to truncate(post.rationale), post %>
	</td>
	<td>
		<%= status_label post.status %>
	</td>
	<td>
		<%= link_to "", edit_post_path(post), class: "glyphicon glyphicon-pencil", id: "edit_#{post.id}" if policy(post).update?%>
	</td>
	<td>
		<%= link_to "", post_path(post), class: "glyphicon glyphicon-trash", method: :delete, data: {confirm: "Are You Sure?"}%>
	</td>
</tr>
